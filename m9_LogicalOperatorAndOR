using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading.Tasks;

namespace m9_AndOR
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("What is your age?");
            int age = Convert.ToInt32(Console.ReadLine()); //taking age as input and casting to integer
            Console.WriteLine("Have you ever had a DUI?");
            bool haveDUI = Convert.ToBoolean(Console.ReadLine()); //taking DUI status as input and casting to boolean
            Console.WriteLine("How many speeding tickets do you have?");
            int tickets = Convert.ToInt16(Console.ReadLine());//taking number of speeding tickets as input and casting to integer
            Console.WriteLine("Qualified?");
           
            /* if following conditions are met then print true, else print false:
               - Applicants must be over 15 years old.
               - Applicants must not have any DUIâ€™s.
               - Applicants must not have more than 3 speeding tickets.
             */
            if ((age > 15 && !haveDUI && tickets <= 3))
            {
                Console.WriteLine("true");
            }
            else
            {
                Console.WriteLine("false");
            }



        }
    }
}
